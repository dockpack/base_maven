file:
  /etc/profile.d/maven.sh:
    exists: true
  {{ maven_location }}/settings-security.xml:
    exists: true
    mode: "0600"
    filetype: file
  {{ maven_location }}/apache-maven-{{ maven_version }}/bin/mvn:
    exists: true
    mode: "0755"
  {{ maven_location }}/.m2/settings.xml
    exists: true
    mode: "0644"
    contains:
      - "{{ maven_snapshots_url }}"
